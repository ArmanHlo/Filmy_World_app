                            android:scaleType="centerCrop"
                            android:src="@drawable/devra" />


                    </androidx.cardview.widget.CardView>

                    <!-- Repeat CardView blocks for more images -->

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Crime Category -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Crime"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <!-- Horizontal ScrollView for Crime Images -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Example CardView for Crime Images -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:id="@+id/doublesmart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Crime Movie Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/doublesmart" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:id="@+id/coolie"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Comedy Movie Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/coolie" />


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:id="@+id/toxic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Comedy Movie Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/toxic" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:id="@+id/bazoka"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Comedy Movie Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bazoka" />


                    </androidx.cardview.widget.CardView>

                    <!-- Repeat CardView blocks for more images -->

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Suspense Category -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Suspense"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <!-- Horizontal ScrollView for Suspense Images -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Example CardView for Suspense Images -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Suspense Movie Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/stree2" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:id="@id/bb3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Comedy Movie Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bb3" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:id="@id/max"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Comedy Movie Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/max" />


