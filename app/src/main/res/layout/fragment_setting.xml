<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingFragment"
    android:background="@color/black">

    <!-- ViewPager2 for image slider -->

    <!-- Dot indicators -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_gravity="top"
        android:layout_marginTop="0dp"
        android:layout_weight="1" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="220dp"
        app:tabGravity="center"
        app:tabIndicatorColor="#DD3E3E"
        app:tabSelectedTextColor="@android:color/white"
        app:tabTextColor="@android:color/darker_gray" />

    <!-- Slide info TextView -->
    <TextView
        android:id="@+id/slideInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="8dp"
        android:background="@android:color/black" />

    <!-- Container for rows of images with vertical scrolling -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Comedy Category -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Comedy"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <!-- Horizontal ScrollView for Comedy Images -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Example CardView for Comedy Images -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:id="@+id/kkmein"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Comedy Movie Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/kkmein" />

                        <ImageView
                            android:id="@+id/st2"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:contentDescription="Comedy Movie Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/st2f" />
                        <ImageView
                            android:id="@+id/kkmf"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:contentDescription="Comedy Movie Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/kkmf" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:id="@+id/grrr"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Comedy Movie Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/grrr" />


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:id="@+id/wcttj"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Comedy Movie Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/wcttj" />


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:id="@+id/bb3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Comedy Movie Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bb3" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:id="@+id/munjya"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Comedy Movie Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/munjya" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:id="@+id/stree2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Comedy Movie Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/stree2" />


                    </androidx.cardview.widget.CardView>

                    <!-- Repeat CardView blocks for more images -->

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Action Category -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Action"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <!-- Horizontal ScrollView for Action Images -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Example CardView for Action Images -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Action Movie Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/indian2" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:id="@id/doublesmart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Comedy Movie Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/doublesmart" />




                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <ImageView
